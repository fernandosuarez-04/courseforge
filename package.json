{
  "name": "courseforge",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev -w apps/web\" \"npm run dev -w apps/api\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "netlify-cli": "^23.13.3",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.10",
    "@google/generative-ai": "^0.24.1",
    "@supabase/ssr": "^0.8.0",
    "ai": "^6.0.39",
    "next": "^16.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "scorm-again": "^3.0.0",
    "zod": "^4.3.5"
  }
}
