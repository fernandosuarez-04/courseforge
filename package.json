{
  "name": "courseforge",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,magenta\" \"npm run dev -w apps/web\" \"npm run dev -w apps/api\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces"
  },
  "devDependencies": {
    "@netlify/functions": "^5.1.2",
    "@types/dotenv": "^6.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "netlify-cli": "^23.13.3",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.10",
    "@ai-sdk/openai": "^3.0.12",
    "@google/genai": "^1.37.0",
    "@google/generative-ai": "^0.24.1",
    "@supabase/ssr": "^0.8.0",
    "ai": "^6.0.39",
    "cheerio": "^1.2.0",
    "html-to-image": "^1.11.13",
    "html2canvas": "^1.4.1",
    "next": "^16.1.3",
    "openai": "^6.16.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "scorm-again": "^3.0.0",
    "sonner": "^2.0.7",
    "zod": "^4.3.5"
  }
}
